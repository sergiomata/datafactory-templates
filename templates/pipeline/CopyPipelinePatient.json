{
	"name": "CopyPipelinePatient",
	"properties": {
		"activities": [
			{
				"name": "Copy_8sv",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "Patient"
					},
					{
						"name": "Destination",
						"value": "patient//Patient.json"
					}
				],
				"typeProperties": {
					"source": {
						"type": "MongoDbV2Source",
						"batchSize": 300
					},
					"sink": {
						"type": "JsonSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings",
							"blockSizeInMB": 100
						},
						"formatSettings": {
							"type": "JsonWriteSettings",
							"quoteAllText": true,
							"filePattern": "setOfObjects"
						}
					},
					"enableStaging": false,
					"enableSkipIncompatibleRow": true,
					"logStorageSettings": {
						"linkedServiceName": {
							"referenceName": "datalakemoons",
							"type": "LinkedServiceReference"
						},
						"path": "logs"
					},
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['_id']"
								},
								"sink": {
									"path": "id"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "SourceDataset_8sv",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "DestinationDataset_8sv",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}